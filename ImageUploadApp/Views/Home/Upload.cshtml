@model ImageUploadApp.Models.ImageTextModel


<h2>Upload Image and Text</h2>

<!--form for uploading text and image -->
<form asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <!--input field for text entry -->
        <label>Enter Text:</label>
        <input asp-for="Text" class="form-control" required />
    </div>

    <div class="form-group">
        <!--input for selecting an image -->
        <label>Select Image:</label>
        <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" required />
    </div>

   
    <button type="submit" class="btn btn-success">Upload</button>
</form>


<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
